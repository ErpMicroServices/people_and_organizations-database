{
  "name": "people_and_organizations-database",
  "version": "1.0.1",
  "description": "Database for the person & group data domain",
  "author": {
    "name": "Jim Barrows",
    "email": "Jim.Barrows@gmail.com"
  },
  "license": "Apache-2.0",
  "scripts": {
    "build": "npm run build:database && npm run build:docker",
    "build:docker": "docker build --tag erpmicroservices/people-and-organizations-database --rm .",
    "build:database": "mkdir -p build && cat sql/V_peop*.sql > build/database_up.sql",
    "clean": "rm -rf build && rm -rf generated-sql && yes | docker rmi --force erpmicroservices/people-and-organizations-database && yes | docker volume prune && docker rm people-and-organizations-database",
    "migrate": "npx flyway -configFiles=flyway.conf -url=jdbc:postgresql://${DB_HOST:-localhost}:${DB_PORT:-5432}/${DB_NAME:-people_and_organizations} -user=${DB_USER:-people_and_organizations} -password=${DB_PASSWORD:-people_and_organizations} migrate",
    "migrate:info": "npx flyway -configFiles=flyway.conf -url=jdbc:postgresql://${DB_HOST:-localhost}:${DB_PORT:-5432}/${DB_NAME:-people_and_organizations} -user=${DB_USER:-people_and_organizations} -password=${DB_PASSWORD:-people_and_organizations} info",
    "migrate:validate": "npx flyway -configFiles=flyway.conf -url=jdbc:postgresql://${DB_HOST:-localhost}:${DB_PORT:-5432}/${DB_NAME:-people_and_organizations} -user=${DB_USER:-people_and_organizations} -password=${DB_PASSWORD:-people_and_organizations} validate",
    "push": "docker push erpmicroservices/people-and-organizations-database:latest",
    "start": "docker run --publish 5432:5432 --name people-and-organizations-database erpmicroservices/people-and-organizations-database",
    "test": "cucumber-js --tags @party_database  --require-module @babel/register --require-module @babel/polyfill  -r ./features ../people_and_organizations-features"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ErpMicroServices/party-database.git"
  },
  "bugs": {
    "url": "https://github.com/ErpMicroServices/party-database/issues"
  },
  "homepage": "https://github.com/ErpMicroServices/party-database#readme",
  "dependencies": {
    "liquibase": "^4.28.1",
    "moment": "^2.30.1",
    "node-plantuml-back": "^1.1.4",
    "pg-promise": "^10.15.4",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@babel/core": "^7.27.1",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.27.1",
    "@babel/register": "^7.27.1",
    "chai": "^4.5.0",
    "csv-parse": "^4.16.3",
    "cucumber": "^7.0.0-rc.0",
    "dotenv": "^16.0.3",
    "node-flywaydb": "^3.0.7",
    "stream-transform": "^2.1.3",
    "uuid": "^8.3.2"
  }
}
